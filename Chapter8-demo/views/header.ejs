    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <nav class="navbar navbar-light bg-light header-bar">
        <a class="navbar-brand ml-4" href="/home">
            <i class="fas fa-store"></i>
            <%= title %>
        </a>
        <div class="customer-area">
            <div class="dropdown ">
                <button class="btn dropdown-toggle no-shadow" type="button" id="dropdownMenuButton1"
