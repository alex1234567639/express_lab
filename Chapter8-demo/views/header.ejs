                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <% if(userName === 'Guest') { %>
                    <li><a class="dropdown-item" href="/login">登入</a></li>
                    <% } else { %>
                        <li><a  data-ajax="false" class="dropdown-item" href="/logout">登出</a></li>
                    <% } %>
                    <li><a class="dropdown-item" href="#">會員中心</a></li>
                    <li><a class="dropdown-item" href="#">商城條款</a></li>
                </ul>
            </div>
            <button class="btn verticle-center ml-3 mr-4 no-shadow">
                <i class="fas fa-shopping-cart"></i>
                購物車
            </button>
        </div>
    </nav>
